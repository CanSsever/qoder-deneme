# Database Configuration
DATABASE_URL=sqlite:///./oneshot_dev.db

# JWT Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-12345
JWT_EXPIRATION_HOURS=24

# AWS S3 Configuration (for development, you can use placeholder values)
S3_BUCKET=oneshot-images-dev
S3_KEY=AKIA_DEV_KEY
S3_SECRET=dev_secret_key_placeholder
S3_REGION=us-east-1

# Redis Configuration (for job queue)
REDIS_URL=redis://localhost:6379

# Superwall/Payment Configuration
SUPERWALL_SECRET=dev-superwall-secret-key

# Application Settings
DEFAULT_CREDITS=10
MAX_FILE_SIZE_MB=10
ENVIRONMENT=development

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081

# Logging
LOG_LEVEL=INFO