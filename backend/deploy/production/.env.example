# Production Environment Configuration
COMPOSE_PROJECT_NAME=oneshot-production

# Docker Registry
REGISTRY=ghcr.io
IMAGE_NAME=your-org/oneshot-face-swapper
IMAGE_TAG=main-latest

# Domain Configuration
DOMAIN=api.yourdomain.com
PRODUCTION_URL=https://api.yourdomain.com
ACME_EMAIL=admin@yourdomain.com

# Cloudflare DNS Challenge (for Let's Encrypt)
CLOUDFLARE_EMAIL=admin@yourdomain.com
CLOUDFLARE_API_KEY=your-cloudflare-api-key

# Database (Neon/Supabase) - Production
DATABASE_URL=postgresql://username:password@production-host:5432/database

# Redis (Upstash) - Production
REDIS_URL=redis://default:password@production-host:6379

# JWT Configuration - Production
JWT_SECRET_KEY=your-production-jwt-secret

# AWS S3 / Cloudflare R2 Configuration - Production
AWS_ACCESS_KEY_ID=your-production-access-key
AWS_SECRET_ACCESS_KEY=your-production-secret-key
AWS_REGION=auto
S3_BUCKET_NAME=oneshot-production-bucket
S3_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com

# Payment Configuration - Production
SUPERWALL_SIGNING_SECRET=your-superwall-production-secret
ENTITLEMENTS_DEFAULT_PLAN=free
DEV_BILLING_MODE=false

# AI Provider Configuration - Production
RUNPOD_API_KEY=your-production-runpod-api-key
COMFYUI_BASE_URL=https://your-production-comfyui-endpoint.com

# Monitoring - Production
SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project-id