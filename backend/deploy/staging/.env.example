# Staging Environment Configuration
COMPOSE_PROJECT_NAME=oneshot-staging

# Docker Registry
REGISTRY=ghcr.io
IMAGE_NAME=your-org/oneshot-face-swapper
IMAGE_TAG=develop-latest

# Domain Configuration
DOMAIN=staging.yourdomain.com
STAGING_URL=https://staging.yourdomain.com
ACME_EMAIL=admin@yourdomain.com

# Cloudflare DNS Challenge (for Let's Encrypt)
CLOUDFLARE_EMAIL=admin@yourdomain.com
CLOUDFLARE_API_KEY=your-cloudflare-api-key

# Database (Neon/Supabase)
DATABASE_URL=postgresql://username:password@host:5432/database

# Redis (Upstash)
REDIS_URL=redis://default:password@host:6379

# JWT Configuration
JWT_SECRET_KEY=your-staging-jwt-secret

# AWS S3 / Cloudflare R2 Configuration
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=auto
S3_BUCKET_NAME=oneshot-staging-bucket
S3_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com

# Payment Configuration
SUPERWALL_SIGNING_SECRET=your-superwall-staging-secret
ENTITLEMENTS_DEFAULT_PLAN=free
DEV_BILLING_MODE=true

# AI Provider Configuration
RUNPOD_API_KEY=your-runpod-api-key
COMFYUI_BASE_URL=https://your-comfyui-endpoint.com

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id