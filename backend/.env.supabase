# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret

# Legacy Database (remove when fully migrated)
DATABASE_URL=sqlite:///./oneshot.db

# JWT Configuration (now using Supabase JWT secret)
JWT_SECRET=your-supabase-jwt-secret
JWT_EXPIRATION_HOURS=24
JWT_ALGORITHM=HS256

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Application Settings
DEFAULT_CREDITS=10
MAX_FILE_SIZE_MB=20
ENVIRONMENT=development

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081,http://localhost:19006

# Logging
LOG_LEVEL=INFO

# Monitoring & Observability
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
RELEASE_VERSION=v2.0.0

# Prometheus Metrics
ENABLE_METRICS=true
METRICS_PORT=8000

# Application Version
APP_VERSION=2.0.0

# GPU Provider Configuration
GPU_PROVIDER=comfy_local

# ComfyUI Local Configuration
COMFY_LOCAL_URL=http://localhost:8188

# Output Configuration
OUTPUT_FORMAT=png
OUTPUT_QUALITY=95
MAX_INPUT_MB=20

# Security Configuration
MAX_IMAGE_DIMENSION=8192
MIN_IMAGE_DIMENSION=64

# Rate Limiting
ENABLE_RATE_LIMITING=true
GLOBAL_RATE_LIMIT=1000/hour